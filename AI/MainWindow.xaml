<Window x:Class="AI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AI"
        mc:Ignorable="d"
        Title="TWSE Variation"
        Height="450"
        Width="900"
        Loaded="Window_Loaded">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" LastChildFill="False" Margin="0 0 0 12">
            <TextBlock x:Name="TitleTextBlock"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center" />
            <Button Content="重新整理"
                    Margin="12 0 0 0"
                    Padding="12 4"
                    VerticalAlignment="Center"
                    Click="RefreshButton_Click" />
        </DockPanel>

        <DataGrid x:Name="VariationDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  Margin="0 0 0 12"
                  MouseDoubleClick="VariationDataGrid_MouseDoubleClick" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <TextBlock Text="更新時間：" FontWeight="SemiBold" />
            <TextBlock x:Name="TimestampTextBlock" />
            <TextBlock Text="  " />
            <TextBlock x:Name="StatusTextBlock" />
        </StackPanel>
    </Grid>
</Window>